# Proton LFS environment configuration
# This project is pre-production. Do not use for production data.

# Adapter configuration
PROTON_LFS_BACKEND=local
ADAPTER_ALLOW_MOCK_TRANSFERS=false
PROTON_LFS_LOCAL_STORE_DIR=
# Credential provider: pass-cli (default) or git-credential (uses git credential manager)
PROTON_CREDENTIAL_PROVIDER=pass-cli
# pass-cli binary path (used by proton-drive-cli when PROTON_CREDENTIAL_PROVIDER=pass-cli)
PROTON_PASS_CLI_BIN=pass-cli
DEBUG=false

# proton-drive-cli configuration (used when PROTON_LFS_BACKEND=sdk)
PROTON_DRIVE_CLI_BIN=
NODE_BIN=
PROTON_DRIVE_CLI_TIMEOUT_MS=300000
PROTON_DRIVE_CLI_SESSION_DIR=

# Proton API integration
PROTON_API_BASE=https://drive.proton.me
PROTON_APP_VERSION=external-drive-protonlfs@dev

# Storage layout
LFS_STORAGE_BASE=LFS

# Logging
LOG_LEVEL=info
LOG_FILE=

# Timeouts (seconds)
TRANSFER_TIMEOUT=300
API_TIMEOUT=30
